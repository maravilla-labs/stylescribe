<div class="token-grid">
    {{#each tokens}}
    <div class="token-card rounded-lg border border-gray-200 overflow-hidden bg-white hover:shadow-lg transition-shadow" data-token-name="{{this.name}}" data-token-type="shadow">
        <div class="p-8 bg-gray-50 flex items-center justify-center">
            <div class="shadow-demo" style="box-shadow: {{this.value}};"></div>
        </div>
        <div class="token-info">
            <div class="token-name">{{this.cssVar}}</div>
            <div class="token-value">{{this.value}}</div>
            {{#if this.description}}
            <div class="token-description">{{this.description}}</div>
            {{/if}}
            <button class="copy-btn mt-2 px-2 py-1 text-xs border border-gray-300 rounded bg-white hover:bg-gray-100 cursor-pointer transition-colors" onclick="copyToken('{{this.cssVar}}')">Copy</button>
        </div>
    </div>
    {{/each}}
</div>
