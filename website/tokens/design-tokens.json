{
  "$meta": {
    "name": "StyleScribe",
    "description": "Design tokens for StyleScribe - using programmable token functions",
    "version": "1.0.0",
    "themes": [
      {
        "name": "dark",
        "file": "./dark.json",
        "mode": "dark"
      },
      {
        "name": "comic",
        "file": "./comic.json"
      }
    ]
  },
  "color": {
    "$description": "Color tokens using programmable functions for automatic palette generation",
    "brand": {
      "$value": "#6366f1",
      "$type": "color",
      "$description": "Base brand color - change this and the entire palette updates automatically"
    },
    "primary": {
      "50": {
        "$value": "tint({color.brand}, 95%)",
        "$type": "color"
      },
      "100": {
        "$value": "tint({color.brand}, 85%)",
        "$type": "color"
      },
      "200": {
        "$value": "tint({color.brand}, 70%)",
        "$type": "color"
      },
      "300": {
        "$value": "tint({color.brand}, 50%)",
        "$type": "color"
      },
      "400": {
        "$value": "tint({color.brand}, 25%)",
        "$type": "color"
      },
      "500": {
        "$value": "{color.brand}",
        "$type": "color",
        "$description": "Base primary"
      },
      "600": {
        "$value": "shade({color.brand}, 15%)",
        "$type": "color"
      },
      "700": {
        "$value": "shade({color.brand}, 30%)",
        "$type": "color"
      },
      "800": {
        "$value": "shade({color.brand}, 50%)",
        "$type": "color"
      },
      "900": {
        "$value": "shade({color.brand}, 70%)",
        "$type": "color"
      },
      "$description": "Primary color scale - automatically generated from brand using tint() and shade()"
    },
    "on-primary": {
      "$value": "accessibleText({color.primary.500})",
      "$type": "color",
      "$description": "Accessible text on primary - auto-selects white or black for WCAG compliance"
    },
    "accent": {
      "$value": "complement({color.brand})",
      "$type": "color",
      "$description": "Accent color - complementary (180deg hue rotation) from brand"
    },
    "success": {
      "base": {
        "$value": "#22c55e",
        "$type": "color"
      },
      "light": {
        "$value": "tint({color.success.base}, 80%)",
        "$type": "color"
      },
      "dark": {
        "$value": "shade({color.success.base}, 25%)",
        "$type": "color"
      },
      "on": {
        "$value": "accessibleText({color.success.base})",
        "$type": "color"
      }
    },
    "warning": {
      "base": {
        "$value": "#f59e0b",
        "$type": "color"
      },
      "light": {
        "$value": "tint({color.warning.base}, 80%)",
        "$type": "color"
      },
      "dark": {
        "$value": "shade({color.warning.base}, 25%)",
        "$type": "color"
      },
      "on": {
        "$value": "accessibleText({color.warning.base})",
        "$type": "color"
      }
    },
    "danger": {
      "base": {
        "$value": "#ef4444",
        "$type": "color"
      },
      "light": {
        "$value": "tint({color.danger.base}, 80%)",
        "$type": "color"
      },
      "dark": {
        "$value": "shade({color.danger.base}, 25%)",
        "$type": "color"
      },
      "on": {
        "$value": "accessibleText({color.danger.base})",
        "$type": "color"
      }
    },
    "neutral": {
      "50": {
        "$value": "#f9fafb",
        "$type": "color"
      },
      "100": {
        "$value": "#f3f4f6",
        "$type": "color"
      },
      "200": {
        "$value": "#e5e7eb",
        "$type": "color"
      },
      "300": {
        "$value": "#d1d5db",
        "$type": "color"
      },
      "400": {
        "$value": "#9ca3af",
        "$type": "color"
      },
      "500": {
        "$value": "#6b7280",
        "$type": "color"
      },
      "600": {
        "$value": "#4b5563",
        "$type": "color"
      },
      "700": {
        "$value": "#374151",
        "$type": "color"
      },
      "800": {
        "$value": "#1f2937",
        "$type": "color"
      },
      "900": {
        "$value": "#111827",
        "$type": "color"
      }
    },
    "background": {
      "$value": "{color.neutral.50}",
      "$type": "color"
    },
    "surface": {
      "$value": "#ffffff",
      "$type": "color"
    },
    "border": {
      "$value": "{color.neutral.200}",
      "$type": "color"
    },
    "text": {
      "$value": "{color.neutral.900}",
      "$type": "color"
    },
    "text-muted": {
      "$value": "{color.neutral.500}",
      "$type": "color"
    },
    "overlay": {
      "light": {
        "$value": "alpha({color.neutral.900}, 0.1)",
        "$type": "color"
      },
      "medium": {
        "$value": "alpha({color.neutral.900}, 0.5)",
        "$type": "color"
      },
      "dark": {
        "$value": "alpha({color.neutral.900}, 0.8)",
        "$type": "color"
      }
    },
    "light": {
      "$value": "{color.neutral.100}",
      "$type": "color",
      "$description": "Light background for tracks, inputs"
    },
    "dark": {
      "$value": "{color.neutral.800}",
      "$type": "color"
    },
    "white": {
      "$value": "#ffffff",
      "$type": "color"
    },
    "primary-hover": {
      "$value": "{color.primary.600}",
      "$type": "color"
    },
    "secondary": {
      "$value": "{color.neutral.600}",
      "$type": "color"
    },
    "secondary-hover": {
      "$value": "{color.neutral.700}",
      "$type": "color"
    },
    "danger-hover": {
      "$value": "{color.danger.dark}",
      "$type": "color"
    },
    "info": {
      "$value": "#3b82f6",
      "$type": "color",
      "$description": "Informational blue"
    }
  },
  "spacing": {
    "$description": "Spacing scale using multiply() from a single base value",
    "base": {
      "$value": "1rem",
      "$type": "dimension",
      "$description": "Base spacing unit - change this to scale all spacing proportionally"
    },
    "3xs": {
      "$value": "multiply({spacing.base}, 0.125)",
      "$type": "dimension"
    },
    "2xs": {
      "$value": "multiply({spacing.base}, 0.25)",
      "$type": "dimension"
    },
    "xs": {
      "$value": "multiply({spacing.base}, 0.5)",
      "$type": "dimension"
    },
    "sm": {
      "$value": "multiply({spacing.base}, 0.75)",
      "$type": "dimension"
    },
    "md": {
      "$value": "{spacing.base}",
      "$type": "dimension"
    },
    "lg": {
      "$value": "multiply({spacing.base}, 1.5)",
      "$type": "dimension"
    },
    "xl": {
      "$value": "multiply({spacing.base}, 2)",
      "$type": "dimension"
    },
    "2xl": {
      "$value": "multiply({spacing.base}, 3)",
      "$type": "dimension"
    },
    "3xl": {
      "$value": "multiply({spacing.base}, 4)",
      "$type": "dimension"
    },
    "fluid": {
      "$description": "Fluid spacing using CSS clamp() for responsive layouts",
      "sm": {
        "$value": "fluidSpace(0.5rem, 1rem)",
        "$type": "dimension"
      },
      "md": {
        "$value": "fluidSpace(1rem, 2rem)",
        "$type": "dimension"
      },
      "lg": {
        "$value": "fluidSpace(2rem, 4rem)",
        "$type": "dimension"
      }
    }
  },
  "font": {
    "family": {
      "base": {
        "$value": "system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
        "$type": "fontFamily"
      },
      "mono": {
        "$value": "ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, monospace",
        "$type": "fontFamily"
      }
    },
    "size": {
      "$description": "Fluid typography using fluidType() - generates CSS clamp() for responsive text",
      "xs": {
        "$value": "fluidType(0.75rem, 0.8125rem)",
        "$type": "dimension"
      },
      "sm": {
        "$value": "fluidType(0.8125rem, 0.875rem)",
        "$type": "dimension"
      },
      "base": {
        "$value": "fluidType(0.875rem, 1rem)",
        "$type": "dimension"
      },
      "lg": {
        "$value": "fluidType(1rem, 1.125rem)",
        "$type": "dimension"
      },
      "xl": {
        "$value": "fluidType(1.125rem, 1.25rem)",
        "$type": "dimension"
      },
      "2xl": {
        "$value": "fluidType(1.25rem, 1.5rem)",
        "$type": "dimension"
      },
      "3xl": {
        "$value": "fluidType(1.5rem, 2rem)",
        "$type": "dimension"
      },
      "4xl": {
        "$value": "fluidType(2rem, 2.5rem)",
        "$type": "dimension"
      },
      "5xl": {
        "$value": "fluidType(2.5rem, 3.5rem)",
        "$type": "dimension"
      }
    },
    "weight": {
      "normal": {
        "$value": "400",
        "$type": "fontWeight"
      },
      "medium": {
        "$value": "500",
        "$type": "fontWeight"
      },
      "semibold": {
        "$value": "600",
        "$type": "fontWeight"
      },
      "bold": {
        "$value": "700",
        "$type": "fontWeight"
      }
    },
    "lineHeight": {
      "tight": {
        "$value": "1.25",
        "$type": "number"
      },
      "normal": {
        "$value": "1.5",
        "$type": "number"
      },
      "relaxed": {
        "$value": "1.75",
        "$type": "number"
      }
    }
  },
  "border": {
    "width": {
      "thin": {
        "$value": "1px",
        "$type": "dimension"
      },
      "medium": {
        "$value": "2px",
        "$type": "dimension"
      },
      "thick": {
        "$value": "4px",
        "$type": "dimension"
      }
    },
    "radius": {
      "sm": {
        "$value": "0.25rem",
        "$type": "dimension"
      },
      "md": {
        "$value": "0.375rem",
        "$type": "dimension"
      },
      "lg": {
        "$value": "0.5rem",
        "$type": "dimension"
      },
      "xl": {
        "$value": "0.75rem",
        "$type": "dimension"
      },
      "full": {
        "$value": "9999px",
        "$type": "dimension"
      }
    }
  },
  "shadow": {
    "sm": {
      "$value": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "$type": "shadow"
    },
    "md": {
      "$value": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
      "$type": "shadow"
    },
    "lg": {
      "$value": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
      "$type": "shadow"
    },
    "xl": {
      "$value": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
      "$type": "shadow"
    }
  },
  "transition": {
    "fast": {
      "$value": "150ms ease",
      "$type": "duration"
    },
    "base": {
      "$value": "200ms ease",
      "$type": "duration"
    },
    "slow": {
      "$value": "300ms ease",
      "$type": "duration"
    }
  }
}
